@font-face
  font-family: Poiretone
  src: url("../fonts/poiretone.woff") format("woff"), url("../fonts/poiretone.woff2") format("woff2")

body
  background: #EEE
  color: #111
  margin-left: 0
  padding: 0
  font-family: Lato

p, h1, h2, h3, h4, h5, h6
  color: #111

a
  color: #619CF4
  text-decoration: none

a:link
  text-decoration: none

a:visited
  text-decoration: none

a:hover
  text-decoration: underline

#header
  width: 1000px
  margin-top: 35px
  margin-left: auto
  margin-right: auto
  padding-bottom: 5px
  position: relative
  border-bottom: 5px solid #111
  font-weight: 700

#header a:active
  outline: 0
  border: 0

#header a:focus
  outline: 0
  border: 0

#header-left
  width: 50%

#header-left-menu
  margin-bottom: 10px

#header-title
  display: inline
  height: 64px
  font-size: 50px
  user-select: none
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  font-family: Poiretone

#header-title a:hover
  text-decoration: none

#header-title-first-part
  color: #111

#header-title-second-part
  color: #619CF4

#header-title:hover #header-title-first-part
  color: #619CF4

#header-title:hover #header-title-second-part
  color: #111

#header-right
  text-align: right
  width: 45%
  position: absolute
  bottom: 10px
  right: 0

.menu, .menu *
  margin: 0
  padding: 0
  list-style: none

.menu
  color: #111
  font-size: 1.3em
  line-height:1.0
  text-align: right
  padding-bottom: 5px

#header-left .menu
  display: inline
  position: absolute
  bottom: 0

#header-right .menu
  position: absolute
  right: 0
  bottom: 0

.menu ul li
  width: 100%

.menu li:hover
  visibility: inherit

.menu li
  float: left
  position: relative
  margin-left: 15px

.menu a
  display: block
  position: relative
  text-decoration: none
  text-transform: uppercase
  color: #111

.menu a:hover
  color: #619CF4

#content
  width: 950px
  margin: 15px auto 0
  font-size: 1.5em
  font-weight: 400
  line-height: 1.5em

#content h1
  width: 100%

#content h2
  color: #EEE
  background: #111
  width: 100%
  padding-left: 8px
  padding-right: 8px
  padding-top: 15px
  padding-bottom: 15px
  width: calc(100% - 16px)

#content h3
  text-decoration: underline

#footer
  width: 1000px
  margin-left: auto
  margin-right: auto
  margin-top: 10px
  position: relative
  border-top: 5px solid #111
  padding: 0
  text-align: right
  color: #EEE

#footer p
  font-weight: 300
  margin-top: 10px
  font-size: 1.2em

#article-index
  font-size: 30px

#article-index
  list-style: none
  counter-reset: li -1

#article-index li:before
  counter-increment: li
  font-family: helvetica
  content: "000" counter(li)". "

#article-index li:nth-child(n+11):before
  content: "00" counter(li)". "

#article-index li:nth-child(n+101):before
  content: "0" counter(li)". "

#article-index li:nth-child(n+1001):before
  content: counter(li)". "

.article-image
  width: calc(100% - 16px)
  border: 8px solid #FFF